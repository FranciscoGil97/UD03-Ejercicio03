<Window
    x:Class="UD03_Ejercicio03.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:UD03_Ejercicio03"
    mc:Ignorable="d"
    Title="Mosaico"
    Height="600"
    Width="600"
    Icon="/mosaico.ico">
    <DockPanel
        LastChildFill="True">

        <TextBlock
            DockPanel.Dock="Top"
            Background="Blue"
            Height="100" />
        <TextBlock
            DockPanel.Dock="Left"
            Background="blue"
            Width="100" />
        <TextBlock
            DockPanel.Dock="Bottom"
            Background="Green"
            Height="100" />
        <TextBlock
            DockPanel.Dock="Right"
            Background="Green"
            Width="100" />
        <TextBlock
            DockPanel.Dock="Left"
            Background="OrangeRed"
            Width="100" />
        <TextBlock
            DockPanel.Dock="Bottom"
            Background="OrangeRed"
            Height="100" />

        <TextBlock
            DockPanel.Dock="Right"
            Background="Yellow"
            Width="100" />
        <TextBlock
            DockPanel.Dock="Top"
            Background="Yellow"
            Height="100" />

        <TextBlock
            Background="Black" />
    </DockPanel>
</Window>
